RewriteEngine On
RewriteRule ^([^.?]+)$ %{REQUEST_URI}.php [L]

RewriteRule (^|/)app(/|$) - [F]
RewriteRule (^|/)config(/|$) - [F]
RewriteRule (^|/)component(/|$) - [F]
# RewriteRule (^|/)public(/|$) - [F]
RewriteRule (^|/)resoruce(/|$) - [F]
RewriteRule (^|/)storage(/|$) - [F]

ErrorDocument 404 /mvc-framework/404.php
